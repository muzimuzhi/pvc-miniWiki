\begin_layout Subsection
Laplace 方程
\end_layout

\begin_layout Standard
令 
\begin_inset Formula $u(r,\theta,z)=R(r)\,\varTheta(\theta)\,Z(z)$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(\frac{1}{r}\frac{\partial}{\partial r}\left(r\frac{\partial}{\partial r}\right)+\frac{1}{r^{2}}\frac{\partial^{2}}{\partial\theta^{2}}+\frac{\partial^{2}}{\partial z^{2}}\right)R(r)\,\varTheta(\theta)\,Z(z)=0
\]

\end_inset


\begin_inset Formula 
\[
\frac{1}{r\,R(r)}\frac{\dd}{\dd r}\left(r\frac{\dd R(r)}{\dd r}\right)+\frac{1}{r^{2}\,\varTheta(\theta)}\frac{\dd^{2}\varTheta(\theta)}{\dd\theta^{2}}=\frac{-1}{Z(z)}\frac{\dd^{2}Z(z)}{\dd z^{2}}
\]

\end_inset


\begin_inset Formula 
\[
\boxed{\left(\frac{\dd^{2}}{\dd z^{2}}-\mu^{2}\right)Z(z)=0}
\]

\end_inset


\begin_inset Formula 
\[
\frac{1}{r\,R(r)}\frac{\dd}{\dd r}\left(r\frac{\dd R(r)}{\dd r}\right)+\frac{1}{r^{2}\,\varTheta(\theta)}\frac{\dd^{2}\varTheta(\theta)}{\dd\theta^{2}}=-\mu^{2}
\]

\end_inset


\begin_inset Formula 
\[
\frac{r}{R(r)}\frac{\dd}{\dd r}\left(r\frac{\dd R(r)}{\dd r}\right)+\mu^{2}r^{2}=\frac{-1}{\varTheta(\theta)}\frac{\dd^{2}\varTheta(\theta)}{\dd\theta^{2}}
\]

\end_inset


\begin_inset Formula 
\[
\boxed{\left(\frac{\dd^{2}}{\dd\theta^{2}}+m^{2}\right)\varTheta(\theta)=0}
\]

\end_inset


\begin_inset Formula 
\[
\left(r\frac{\dd}{\dd r}\left(r\frac{\dd}{\dd r}\right)+\mu^{2}r^{2}-m^{2}\right)R(r)=0
\]

\end_inset

令 
\begin_inset Formula $x=\mu r$
\end_inset

 且 
\begin_inset Formula $y(x)=R(r)$
\end_inset

，即得“Bessel 方程”
\begin_inset Formula 
\[
\boxed{\left(x^{2}\frac{\dd^{2}}{\dd x^{2}}+x\frac{\dd}{\dd x}+x^{2}-m^{2}\right)y(x)=0}
\]

\end_inset


\end_layout

\begin_layout Subsection
Helmholtz 方程
\end_layout

\begin_layout Standard
令 
\begin_inset Formula $u(r,\theta,z)=R(r)\,\varTheta(\theta)\,Z(z)$
\end_inset

，则
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(\frac{1}{r}\frac{\partial}{\partial r}\left(r\frac{\partial}{\partial r}\right)+\frac{1}{r^{2}}\frac{\partial^{2}}{\partial\theta^{2}}+\frac{\partial^{2}}{\partial z^{2}}+k^{2}\right)R(r)\,\varTheta(\theta)\,Z(z)=0
\]

\end_inset

可按类似步骤分离变量，所得的角向方程
\begin_inset Formula 
\[
\boxed{\left(\frac{\dd^{2}}{\dd\theta^{2}}+m^{2}\right)\varTheta(\theta)=0}
\]

\end_inset

及轴向方程
\begin_inset Formula 
\[
\boxed{\left(\frac{\dd^{2}}{\dd z^{2}}-\mu^{2}\right)Z(z)=0}
\]

\end_inset

与 Laplace 方程的结果完全一致，而径向方程为
\begin_inset Formula 
\[
\left(r\frac{\dd}{\dd r}\left(r\frac{\dd}{\dd r}\right)+(\mu^{2}+k^{2})r^{2}-m^{2}\right)R(r)=0
\]

\end_inset

令 
\begin_inset Formula $x=\sqrt{\mu^{2}+k^{2}}r$
\end_inset

 且 
\begin_inset Formula $y(x)=R(r)$
\end_inset

，依然得到“Bessel 方程”
\begin_inset Formula 
\[
\boxed{\left(x^{2}\frac{\dd^{2}}{\dd x^{2}}+x\frac{\dd}{\dd x}+x^{2}-m^{2}\right)y(x)=0}
\]

\end_inset


\end_layout

\begin_layout Section
在球坐标系下分离变量
\end_layout

\begin_layout Subsection
Laplace 方程
\end_layout

\begin_layout Standard
令 
\begin_inset Formula $u(r,\theta,\varphi)=R(r)\,Y(\theta,\varphi)$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(\frac{1}{r^{2}}\frac{\partial}{\partial r}\left(r^{2}\frac{\partial}{\partial r}\right)+\frac{1}{r^{2}\sin\theta}\frac{\partial}{\partial\theta}\left(\sin\theta\frac{\partial}{\partial\theta}\right)+\frac{1}{r^{2}\sin^{2}\theta}\frac{\partial^{2}}{\partial\varphi^{2}}\right)R(r)\,Y(\theta,\varphi)=0
\]

\end_inset


\begin_inset Formula 
\[
\frac{Y(\theta,\varphi)}{r^{2}}\frac{\dd}{\dd r}\left(r^{2}\frac{\dd R(r)}{\dd r}\right)+\frac{R(r)}{r^{2}\sin\theta}\frac{\partial}{\partial\theta}\left(\sin\theta\frac{\partial Y(\theta,\varphi)}{\partial\theta}\right)+\frac{R(r)}{r^{2}\sin^{2}\theta}\frac{\partial^{2}Y(\theta,\varphi)}{\partial\varphi^{2}}=0
\]

\end_inset


\begin_inset Formula 
\[
\frac{-1}{R(r)}\frac{\partial}{\partial r}\left(r^{2}\frac{\partial R(r)}{\partial r}\right)=\frac{1}{Y(\theta,\varphi)\sin\theta}\frac{\partial}{\partial\theta}\left(\sin\theta\frac{\partial Y(\theta,\varphi)}{\partial\theta}\right)+\frac{1}{Y(\theta,\varphi)\sin^{2}\theta}\frac{\partial^{2}Y(\theta,\varphi)}{\partial\varphi^{2}}
\]

\end_inset


\begin_inset Formula 
\[
\boxed{\left(\frac{\dd}{\dd r}\left(r^{2}\frac{\dd}{\dd r}\right)-(l+1)l\right)R(r)=0}
\]

\end_inset


\begin_inset Formula 
\[
\left(\frac{1}{\sin\theta}\frac{\partial}{\partial\theta}\left(\sin\theta\frac{\partial}{\partial\theta}\right)+\frac{1}{\sin^{2}\theta}\frac{\partial^{2}}{\partial\varphi^{2}}\right)Y(\theta,\varphi)=-(l+1)l\,Y(\theta,\varphi)
\]

\end_inset

令 
\begin_inset Formula $Y(\theta,\varphi)=\varTheta(\theta)\,\varPhi(\varphi)$
\end_inset

 
\begin_inset Formula 
\[
\frac{\sin\theta}{\varTheta(\theta)}\frac{\dd}{\dd\theta}\left(\sin\theta\frac{\dd\varTheta(\theta)}{\dd\theta}\right)+(l+1)l\sin^{2}\theta=\frac{-1}{\varPhi(\varphi)}\frac{\dd^{2}\varPhi(\varphi)}{\dd\varphi^{2}}
\]

\end_inset


\begin_inset Formula 
\[
\boxed{\left(\frac{\dd^{2}}{\dd\varphi^{2}}+m^{2}\right)\varPhi(\varphi)=0}
\]

\end_inset


\begin_inset Formula 
\[
\left(\frac{1}{\sin\theta}\frac{\dd}{\dd\theta}\left(\sin\theta\frac{\dd}{\dd\theta}\right)+(l+1)l-\frac{m^{2}}{\sin^{2}\theta}\right)\varTheta(\theta)=0
\]

\end_inset

令 
\begin_inset Formula $x=\cos\theta$
\end_inset

 且 
\begin_inset Formula $P(x)=\varTheta(\theta)$
\end_inset

，则 
\begin_inset Formula $\dd x=\sin\theta\dd\theta$
\end_inset

，即得“连带 Legendre 方程”
\begin_inset Formula 
\[
\boxed{\left(\frac{\dd}{\dd x}\left((1-x^{2})\frac{\dd}{\dd x}\right)+(l+1)l-\frac{m^{2}}{1-x^{2}}\right)P(x)=0}
\]

\end_inset


\end_layout

\begin_layout Subsection
Helmholtz 方程
\end_layout

\begin_layout Standard
令 
\begin_inset Formula $u(r,\theta,\varphi)=R(r)\,Y(\theta,\varphi)$
\end_inset

，则球坐标系下的 Helmholtz 方程
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(\frac{1}{r^{2}}\frac{\partial}{\partial r}\left(r^{2}\frac{\partial}{\partial r}\right)+\frac{1}{r^{2}\sin\theta}\frac{\partial}{\partial\theta}\left(\sin\theta\frac{\partial}{\partial\theta}\right)+\frac{1}{r^{2}\sin^{2}\theta}\frac{\partial^{2}}{\partial\varphi^{2}}+k^{2}\right)R(r)\,Y(\theta,\varphi)=0
\]

\end_inset

可按类似步骤分离变量，所得的角向方程
\begin_inset Formula 
\[
\left(\frac{1}{\sin\theta}\frac{\partial}{\partial\theta}\left(\sin\theta\frac{\partial}{\partial\theta}\right)+\frac{1}{\sin^{2}\theta}\frac{\partial^{2}}{\partial\varphi^{2}}\right)Y(\theta,\varphi)=-(l+1)l\,Y(\theta,\varphi)
\]

\end_inset

与 Laplace 方程的结果完全一致，而径向方程为更一般的“球 Bessel 方程”
\begin_inset Formula 
\[
\boxed{\left(\frac{\dd}{\dd r}\left(r^{2}\frac{\dd}{\dd r}\right)+(kr)^{2}-(l+1)l\right)R(r)=0}
\]

\end_inset


