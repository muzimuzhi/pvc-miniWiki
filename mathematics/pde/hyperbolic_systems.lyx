\begin_layout Subsection
Burgers 方程精确解
\end_layout

\begin_layout Standard
将
\begin_inset Formula 
\[
u=\frac{\partial U}{\partial x}
\]

\end_inset

代入
\begin_inset Formula 
\[
\frac{\partial u}{\partial t}+u\frac{\partial u}{\partial x}=\nu\frac{\partial^{2}u}{\partial x^{2}}
\]

\end_inset

可得
\begin_inset Formula 
\[
\frac{\partial}{\partial t}\frac{\partial U}{\partial x}+\frac{\partial U}{\partial x}\frac{\partial}{\partial x}\frac{\partial U}{\partial x}=\nu\frac{\partial^{2}}{\partial x^{2}}\frac{\partial U}{\partial x}
\]

\end_inset

交换求导顺序，得
\begin_inset Formula 
\[
\frac{\partial}{\partial x}\left(\frac{\partial U}{\partial t}+\frac{1}{2}\left(\frac{\partial U}{\partial x}\right)^{2}\right)=\frac{\partial}{\partial x}\left(\nu\frac{\partial^{2}U}{\partial x^{2}}\right)
\]

\end_inset

即
\begin_inset Formula 
\[
\frac{\partial U}{\partial t}+\frac{1}{2}\left(\frac{\partial U}{\partial x}\right)^{2}=\nu\frac{\partial^{2}U}{\partial x^{2}}
\]

\end_inset

再将 
\begin_inset Formula $U=-2\nu\ln h$
\end_inset

 从而有
\begin_inset Formula 
\[
\frac{\partial U}{\partial t}=\frac{-2\nu}{h}\frac{\partial h}{\partial t},\quad\frac{\partial U}{\partial x}=\frac{-2\nu}{h}\frac{\partial h}{\partial x},\quad\frac{\partial^{2}U}{\partial x^{2}}=\frac{2\nu}{h^{2}}\left(\frac{\partial h}{\partial x}\right)^{2}-\frac{2\nu}{h}\frac{\partial^{2}h}{\partial x^{2}},
\]

\end_inset

代入其中，得
\begin_inset Formula 
\[
\frac{-2\nu}{h}\frac{\partial h}{\partial t}+\frac{1}{2}\left(\frac{-2\nu}{h}\frac{\partial h}{\partial x}\right)^{2}=\nu\left(\frac{2\nu}{h^{2}}\left(\frac{\partial h}{\partial x}\right)^{2}-\frac{2\nu}{h}\frac{\partial^{2}h}{\partial x^{2}}\right),
\]

\end_inset

即
\begin_inset Formula 
\[
\frac{\partial h}{\partial t}=\nu\frac{\partial^{2}h}{\partial x^{2}},
\]

\end_inset

初始条件变为
\begin_inset Formula 
\[
h(x,t=0)=\exp(\frac{U(x,t=0)}{-2\nu}),
\]

\end_inset

该初值问题的精确解为
\begin_inset Formula 
\[
h(x,t)=\frac{1}{\sqrt{4\mathrm{\pi}\nu t}}\int_{\mathbb{R}}\exp(\frac{U(y,t=0)}{-2\nu})\exp(\frac{(x-y)^{2}}{-4\nu t})\dd{y}
\]

\end_inset

具体过程参见《
\begin_inset CommandInset ref
LatexCommand nameref
reference "sec:微分方程：积分变换：线性扩散"

\end_inset

》。
\end_layout

