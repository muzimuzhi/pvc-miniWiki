\begin_inset Formula 
\[
\delta_{2X}(x)\xrightleftharpoons[\hat{F}^{-1}]{\hat{F}}\frac{\mathrm{sinc}(kX)}{\sqrt{2\mathrm{\pi}}},\quad\frac{\mathrm{sinc}(Kx)}{\sqrt{2\mathrm{\pi}}}\xrightleftharpoons[\hat{F}^{-1}]{\hat{F}}\delta_{2K}(k)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Proof
对第一式验证正变换：
\begin_inset Formula 
\[
\begin{aligned}\hat{F}[\delta_{2X}(x)] & =\int_{-X}^{+X}\frac{\exp(-\ii kx)}{\sqrt{2\mathrm{\pi}}}\cdot\frac{1}{2X}\dd{x}=\frac{\exp(-\ii kX)-\exp(+\ii kX)}{-\ii k\cdot2X\cdot\sqrt{2\mathrm{\pi}}}\\
 & =\frac{2\ii\sin(-kX)}{-2\ii kX\sqrt{2\mathrm{\pi}}}=\frac{1}{\sqrt{2\mathrm{\pi}}}\frac{\sin(kX)}{kX}=\frac{\mathrm{sinc}(kX)}{\sqrt{2\mathrm{\pi}}}
\end{aligned}
\]

\end_inset

对第二式验证逆变换：
\begin_inset Formula 
\[
\begin{aligned}\hat{F}^{-1}[\delta_{2K}(k)] & =\int_{-K}^{+K}\frac{\exp(+\ii kx)}{\sqrt{2\mathrm{\pi}}}\cdot\frac{1}{2K}\dd{k}=\frac{\exp(+\ii Kx)-\exp(-\ii Kx)}{+\ii x\cdot2K\cdot\sqrt{2\mathrm{\pi}}}\\
 & =\frac{2\ii\sin(+Kx)}{+2\ii Kx\sqrt{2\mathrm{\pi}}}=\frac{1}{\sqrt{2\mathrm{\pi}}}\frac{\sin(Kx)}{Kx}=\frac{\mathrm{sinc}(Kx)}{\sqrt{2\mathrm{\pi}}}
\end{aligned}
\]

\end_inset


\end_layout

