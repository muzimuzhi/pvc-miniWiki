\begin_inset Formula 
\[
\exp(-ax^{2})\xrightleftharpoons[\hat{F}^{-1}]{\hat{F}}\frac{1}{\sqrt{2a}}\exp(-\frac{k^{2}}{4a}),\quad\forall a>0
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Proof
代入 Fourier 变换的定义，得到
\begin_inset Formula 
\[
\begin{aligned}\hat{F}[\exp(-ax^{2})] & \coloneqq\int_{-\infty}^{+\infty}\frac{\exp(-\ii kx)}{\sqrt{2\mathrm{\pi}}}\exp(-ax^{2})\dd{x}\\
 & =\frac{1}{\sqrt{2\mathrm{\pi}}}\int_{-\infty}^{+\infty}\exp(-a\cdot\left[\left(x+\frac{\ii k}{2a}\right)^{2}-\left(\frac{\ii k}{2a}\right)^{2}\right])\dd{x}\\
 & =\frac{1}{\sqrt{2\mathrm{\pi}}}\exp(-\frac{k^{2}}{4a})\int_{\ii\frac{k}{2a}-\infty}^{\ii\frac{k}{2a}+\infty}\exp(-az^{2})\dd{z}
\end{aligned}
\]

\end_inset

其中 
\begin_inset Formula $z=x+\ii\frac{k}{2a}$
\end_inset

。被积函数 
\begin_inset Formula $\exp(-az^{2})$
\end_inset

 没有有限远的奇点，故由
\begin_inset CommandInset ref
LatexCommand nameref
reference "chap:留数定理"
plural "false"
caps "false"
noprefix "false"

\end_inset

可得
\begin_inset Formula 
\[
\int_{\ii\frac{k}{2a}-\infty}^{\ii\frac{k}{2a}+\infty}\exp(-az^{2})\dd{z}=\int_{-\infty}^{+\infty}\exp(-ax^{2})\dd{x}=\sqrt{\frac{\mathrm{\pi}}{a}}
\]

\end_inset

从而有
\begin_inset Formula 
\[
\hat{F}[\exp(-ax^{2})]=\frac{\sqrt{\mathrm{\pi}/a}}{\sqrt{2\mathrm{\pi}}}\exp(-\frac{k^{2}}{4a})=\frac{1}{\sqrt{2a}}\exp(-\frac{k^{2}}{4a})
\]

\end_inset


\end_layout

