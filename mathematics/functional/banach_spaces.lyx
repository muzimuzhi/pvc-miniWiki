\begin_layout Lemma
\begin_inset ERT
status open

\begin_layout Plain Layout

[Young]
\end_layout

\end_inset


\begin_inset Formula 
\[
xy\le x^{p}/p+y^{q}/q\impliedby\begin{cases}
(p,q)\in(1,+\infty)^{2} & 1/p+1/q=1\\
(x,y)\in(0,+\infty)^{2}
\end{cases}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Proof
固定 
\begin_inset Formula $y$
\end_inset

，分析关于 
\begin_inset Formula $x$
\end_inset

 的函数 
\begin_inset Formula $f(x)=x^{p}/p+y^{q}/q-xy$
\end_inset

 的单调性、极值点：
\begin_inset Formula 
\[
f'(x_{*})=x_{*}^{p-1}-y=0\implies x_{*}=y^{1/(p-1)}=y^{q/p}\implies f''(x_{*})=(p-1)x_{*}^{p-2}>0
\]

\end_inset

故 
\begin_inset Formula $x_{*}=y^{q/p}$
\end_inset

 是极小值点，代入 
\begin_inset Formula $f(x)$
\end_inset

 即得
\begin_inset Formula 
\[
0=f(y^{q/p})\le f(x)=x^{p}/p+y^{q}/q-xy\qquad\forall x\in[0,+\infty)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Lemma
\begin_inset ERT
status open

\begin_layout Plain Layout

[Hölder]
\end_layout

\end_inset


\begin_inset Formula 
\[
\sum_{k=1}^{\infty}\vert x_{k}\cdot y_{k}\vert\le\underbrace{\left(\sum_{k=1}^{\infty}\vert x_{k}\vert^{p}\right)^{1/p}}_{\Vert\vec{x}\Vert_{p}}\cdot\underbrace{\left(\sum_{k=1}^{\infty}\vert y_{k}\vert^{q}\right)^{1/q}}_{\Vert\vec{y}\Vert_{q}}\impliedby\begin{cases}
(p,q)\in(1,+\infty)^{2}\\
1/p+1/q=1\\{}
[x_{k}]_{k=1}^{\infty}\in\ell_{p}\\{}
[y_{k}]_{k=1}^{\infty}\in\ell_{q}
\end{cases}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Proof
若 
\begin_inset Formula $\Vert\vec{x}\Vert_{p}=0$
\end_inset

 或 
\begin_inset Formula $\Vert\vec{y}\Vert_{q}=0$
\end_inset

，则结论显然成立；下面只考虑 
\begin_inset Formula $\Vert\vec{x}\Vert_{p}\ne0$
\end_inset

 且 
\begin_inset Formula $\Vert\vec{y}\Vert_{q}\ne0$
\end_inset

 的情形。利用 Young's 不等式：
\begin_inset Formula 
\[
\frac{\vert x_{k}\vert}{\Vert\vec{x}\Vert_{p}}\cdot\frac{\vert y_{k}\vert}{\Vert\vec{y}\Vert_{q}}\le\frac{1}{p}\left(\frac{\vert x_{k}\vert}{\Vert\vec{x}\Vert_{p}}\right)^{p}+\frac{1}{q}\left(\frac{\vert y_{k}\vert}{\Vert\vec{y}\Vert_{q}}\right)^{q}
\]

\end_inset

对 
\begin_inset Formula $k$
\end_inset

 求和即得
\begin_inset Formula 
\[
\frac{\sum_{k=1}^{\infty}\vert x_{k}\vert\cdot\vert y_{k}\vert}{\Vert\vec{x}\Vert_{p}\cdot\Vert\vec{y}\Vert_{q}}\le\frac{1}{p}\cancelto{1}{\frac{\sum_{k=1}^{\infty}\vert x_{k}\vert^{p}}{\Vert\vec{x}\Vert_{p}^{p}}}+\frac{1}{q}\cancelto{1}{\frac{\sum_{k=1}^{\infty}\vert y_{k}\vert^{q}}{\Vert\vec{y}\Vert_{q}^{q}}}=1
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Theorem
\begin_inset ERT
status open

\begin_layout Plain Layout

[Minkowski]
\end_layout

\end_inset


\begin_inset Formula 
\[
\boxed{\left(\sum_{k=1}^{\infty}\vert x_{k}+y_{k}\vert^{p}\right)^{1/p}\le\left(\sum_{k=1}^{\infty}\vert x_{k}\vert^{p}\right)^{1/p}+\left(\sum_{k=1}^{\infty}\vert y_{k}\vert^{p}\right)^{1/p}}\impliedby\begin{cases}
p\in(1,+\infty)\\{}
[x_{k}]_{k=1}^{\infty}\in\ell_{p}\\{}
[y_{k}]_{k=1}^{\infty}\in\ell_{p}
\end{cases}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Proof
若 
\begin_inset Formula $\sum_{k=1}^{\infty}\vert x_{k}+y_{k}\vert^{p}=0$
\end_inset

，则结论显然成立；下面只考虑 
\begin_inset Formula $\sum_{k=1}^{\infty}\vert x_{k}+y_{k}\vert^{p}\ne0$
\end_inset

 的情形。由 
\begin_inset Formula $\vert x_{k}+y_{k}\vert\le\vert x_{k}\vert+\vert y_{k}\vert$
\end_inset

 得
\begin_inset Formula 
\[
\begin{aligned}\sum_{k=1}^{\infty}\vert x_{k}+y_{k}\vert^{p} & =\sum_{k=1}^{\infty}\vert x_{k}+y_{k}\vert\cdot\vert x_{k}+y_{k}\vert^{p-1}\\
 & \le\sum_{k=1}^{\infty}\vert x_{k}\vert\cdot\vert x_{k}+y_{k}\vert^{p-1}+\sum_{k=1}^{\infty}\vert y_{k}\vert\cdot\vert x_{k}+y_{k}\vert^{p-1}
\end{aligned}
\]

\end_inset

令 
\begin_inset Formula $q\coloneqq p/(p-1)$
\end_inset

，则有 
\begin_inset Formula $1/p+1/q=1$
\end_inset

，故可对右端两项分别应用 Hölder's 不等式：
\begin_inset Formula 
\[
\begin{aligned}\sum_{k=1}^{\infty}\vert x_{k}\vert\cdot\vert x_{k}+y_{k}\vert^{p-1} & \le\left(\sum_{k=1}^{\infty}\vert x_{k}\vert^{p}\right)^{1/p}\cdot\left(\sum_{k=1}^{\infty}\left(\vert x_{k}+y_{k}\vert^{p-1}\right)^{q}\right)^{1/q}\\
\sum_{k=1}^{\infty}\vert y_{k}\vert\cdot\vert x_{k}+y_{k}\vert^{p-1} & \le\left(\sum_{k=1}^{\infty}\vert y_{k}\vert^{p}\right)^{1/p}\cdot\left(\sum_{k=1}^{\infty}\left(\vert x_{k}+y_{k}\vert^{p-1}\right)^{q}\right)^{1/q}
\end{aligned}
\]

\end_inset

从而有
\begin_inset Formula 
\[
\sum_{k=1}^{\infty}\vert x_{k}+y_{k}\vert^{p}\le\left(\left(\sum_{k=1}^{\infty}\vert x_{k}\vert^{p}\right)^{1/p}+\left(\sum_{k=1}^{\infty}\vert y_{k}\vert^{p}\right)^{1/p}\right)\left(\sum_{k=1}^{\infty}\vert x_{k}+y_{k}\vert^{(p-1)q}\right)^{1/q}
\]

\end_inset

两边同除以
\begin_inset Formula 
\[
\left(\sum_{k=1}^{\infty}\vert x_{k}+y_{k}\vert^{p}\right)^{1-1/p}=\left(\sum_{k=1}^{\infty}\vert x_{k}+y_{k}\vert^{(p-1)q}\right)^{1/q}\impliedby q=\frac{p}{p-1}
\]

\end_inset

即得所需结果。
\end_layout

