status open

\begin_layout Plain Layout

[最速下降法]
\end_layout

\end_inset


\begin_inset Formula 
\[
\underline{d}_{k}=\underline{r}_{k}\equiv\underline{b}-\underline{A}\cdot\underline{x}_{k},\quad\alpha=\frac{\underline{d}_{k}\cdot\underline{d}_{k}}{\underline{d}_{k}\cdot\underline{A}\cdot\underline{d}_{k}},\quad\underline{x}_{k+1}=\underline{x}_{k}+\alpha\underline{d}_{k}
\]

\end_inset


\end_layout

