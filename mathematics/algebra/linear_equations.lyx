\begin_layout Subsection
最速下降法
\end_layout

\begin_layout Standard
假设 
\begin_inset Formula $\underline{A}$
\end_inset

 对称正定，则 
\begin_inset Formula $\underline{A}\vert x\rangle=\vert b\rangle$
\end_inset

 等价于
\begin_inset Formula 
\[
\min_{\vert x\rangle\in\mathbb{R}^{n}}\varphi(\vert x\rangle)\qquad\varphi(\vert x\rangle)\coloneqq\frac{1}{2}\langle x\vert\underline{A}\vert x\rangle-\langle x\vert b\rangle
\]

\end_inset

考虑 
\begin_inset Formula $\varphi(\vert x\rangle)$
\end_inset

 的等值面，该曲面在点 
\begin_inset Formula $\vert x_{\nu}\rangle$
\end_inset

 处的
\color blue
最速下降方向 (steepest descent direction)
\color inherit
 为
\begin_inset Formula 
\[
\vert p_{\nu}\rangle=-\vert\grad\varphi(\vert x_{\nu}\rangle)\rangle=\vert b\rangle-\underline{A}\vert x_{\nu}\rangle\equiv\vert r_{\nu}\rangle
\]

\end_inset

沿此方向，寻找
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\vert x_{\nu+1}\rangle=\vert x_{\nu}\rangle+\alpha\vert p_{\nu}\rangle\equiv\vert x_{\nu}\rangle+\alpha\vert r_{\nu}\rangle
\]

\end_inset

使 
\begin_inset Formula $\varphi(\vert x_{\nu+1}\rangle)$
\end_inset

 的值最小，即
\begin_inset Formula 
\begin{equation}
\begin{aligned}0 & =\frac{\partial\varphi(\vert x_{\nu}\rangle+\alpha\vert p_{\nu}\rangle)}{\partial\alpha}=\langle p_{\nu}\vert\grad\varphi(\vert x_{\nu}\rangle+\alpha\vert p_{\nu}\rangle)\rangle\\
 & =\langle p_{\nu}\vert\underline{A}\vert x_{\nu}\rangle+\langle p_{\nu}\vert\underline{A}\alpha\vert p_{\nu}\rangle-\langle p_{\nu}\vert b\rangle\\
 & =\langle p_{\nu}\vert\underline{A}\vert p_{\nu}\rangle\alpha-\langle p_{\nu}\vert r_{\nu}\rangle
\end{aligned}
\label{eq:steepest-descent}
\end{equation}

\end_inset

由此得
\end_layout

\begin_layout Algorithm
\begin_inset ERT
status open

\begin_layout Plain Layout

[最速下降法]
\end_layout

\end_inset


\begin_inset Formula 
\[
\vert p_{\nu}\rangle=\vert b\rangle-\underline{A}\vert x_{\nu}\rangle\qquad\lambda=\frac{\langle p_{\nu}\vert p_{\nu}\rangle}{\langle p_{\nu}\vert\underline{A}\vert p_{\nu}\rangle}\qquad\vert x_{\nu+1}\rangle=\vert x_{\nu}\rangle+\lambda\vert p_{\nu}\rangle
\]

\end_inset


