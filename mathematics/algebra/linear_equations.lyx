\begin_inset Formula 
\[
\langle r_{0}\vert=\langle d_{0}\vert=\langle b\vert,\quad\vert r_{k+1}\rangle=\vert r_{k}\rangle-\alpha_{k}\underline{A}\,\vert d_{k}\rangle,
\]

\end_inset

及归纳假设
\begin_inset Formula 
\[
\langle r_{0}\vert r_{k}\rangle=\langle d_{0}\vert\,\underline{A}\,\vert d_{k}\rangle=0,
\]

\end_inset

得
\begin_inset Formula 
\[
\langle r_{0}\vert r_{k+1}\rangle=\cancel{\langle r_{0}\vert r_{k}\rangle}-\alpha_{k}\cancel{\langle d_{0}\vert\,\underline{A}\,\vert d_{k}\rangle}=0.
\]

\end_inset


\end_layout

