\begin_layout Subsection
最速下降法
\end_layout

\begin_layout Standard
考虑 
\begin_inset Formula $\varphi(\vert x\rangle)=\frac{1}{2}\langle x\vert\,\underline{A}\,\vert x\rangle-\langle x\vert b\rangle$
\end_inset

 的等值面，该曲面在点 
\begin_inset Formula $\vert x_{k}\rangle$
\end_inset

 处的
\color red
最速下降方向 (steepest descent direction)
\color inherit
 为负梯度方向，即
\begin_inset Formula 
\[
\vert d_{k}\rangle=-\left.\frac{\partial\varphi}{\partial\vert x\rangle}\right|_{\vert x_{k}\rangle}=\vert b\rangle-\underline{A}\,\vert x_{k}\rangle\equiv\vert r_{k}\rangle.
\]

\end_inset

沿此方向，寻找
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\vert x_{k+1}\rangle=\vert x_{k}\rangle+\alpha\vert d_{k}\rangle=\vert x_{k}\rangle+\alpha\left(\vert b\rangle-\underline{A}\,\vert x_{k}\rangle\right),
\]

\end_inset

使 
\begin_inset Formula $\varphi$
\end_inset

 的值最小。为此，先定义 
\begin_inset Formula $\alpha$
\end_inset

 的一元函数
\begin_inset Formula 
\[
\begin{aligned}\psi(\alpha) & =\varphi(\vert x_{k}\rangle+\alpha\vert d_{k}\rangle)=\frac{1}{2}\left(\langle x_{k}\vert+\alpha\langle d_{k}\vert\right)\underline{A}\left(\vert x_{k}\rangle+\alpha\vert d_{k}\rangle\right)-\left(\langle x_{k}\vert+\alpha\langle d_{k}\vert\right)\vert b\rangle,\\
 & =\frac{\alpha^{2}}{2}\langle d_{k}\vert\,\underline{A}\,\vert d_{k}\rangle+\underbrace{\frac{\alpha}{2}\langle x_{k}\vert\,\underline{A}\,\vert d_{k}\rangle+\frac{\alpha}{2}\langle d_{k}\vert\,\underline{A}\,\vert x_{k}\rangle}_{\alpha\langle d_{k}\vert\,\underline{A}\,\vert x_{k}\rangle}-\alpha\langle d_{k}\vert b\rangle+\underbrace{\frac{1}{2}\langle x_{k}\vert\,\underline{A}\,\vert x_{k}\rangle-\langle x_{k}\vert b\rangle}_{\varphi(\vert x_{k}\rangle)},
\end{aligned}
\]

\end_inset

其中用到了
\begin_inset Formula 
\[
\langle x_{k}\vert\,\underline{A}\,\vert d_{k}\rangle=\langle d_{k}\vert\,\underline{A}^{\mathrm{T}}\vert x_{k}\rangle=\langle d_{k}\vert\,\underline{A}\,\vert x_{k}\rangle\impliedby\underline{A}^{\mathrm{T}}=\underline{A},
\]

\end_inset

又因为
\begin_inset Formula 
\[
\alpha\langle d_{k}\vert\,\underline{A}\,\vert x_{k}\rangle-\alpha\langle d_{k}\vert b\rangle=\alpha\langle d_{k}\vert d_{k}\rangle\impliedby\vert d_{k}\rangle\equiv\vert r_{k}\rangle\coloneqq\vert b\rangle-\underline{A}\,\vert x_{k}\rangle,
\]

\end_inset

故
\begin_inset Formula 
\[
\psi(\alpha)=\frac{\alpha^{2}}{2}\langle d_{k}\vert\,\underline{A}\,\vert d_{k}\rangle+\alpha\langle d_{k}\vert r_{k}\rangle+\varphi(\vert x_{k}\rangle),
\]

\end_inset

其最小值条件为
\begin_inset Formula 
\begin{equation}
0=\frac{\dd\psi}{\dd\alpha}=\alpha\langle d_{k}\vert\,\underline{A}\,\vert d_{k}\rangle-\langle d_{k}\vert r_{k}\rangle\label{eq:steepest-descent}
\end{equation}

\end_inset

由此得
\end_layout

