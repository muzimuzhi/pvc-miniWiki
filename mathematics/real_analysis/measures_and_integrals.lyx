\begin_inset ERT
status open

\begin_layout Plain Layout

[移动凸起]
\end_layout

\end_inset

定义在 
\begin_inset Formula $E\coloneqq[0,+\infty)$
\end_inset

 上名为
\bar under
移动凸起 (moving bump)
\bar default
 的函数序列 
\begin_inset Formula $\left\{ f_{k}\coloneqq1_{[k,k+1)}\right\} _{k=1}^{\infty}$
\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
处处收敛到 
\begin_inset Formula $0$
\end_inset

，即 
\begin_inset Formula $\left(\forall x\in\mathbb{R}\right)\left(\lim_{k\to\infty}f_{k}(x)=0\right)$
\end_inset

，从而有 
\begin_inset Formula $\int_{E}\lim_{k\to\infty}f_{k}=0$
\end_inset

，但
\end_layout

\begin_layout Itemize
积分值序列 
\begin_inset Formula $\left\{ \int_{E}f_{k}=1\right\} _{k=1}^{\infty}$
\end_inset

 收敛到 
\begin_inset Formula $1$
\end_inset

，从而有 
\begin_inset Formula $\lim_{k\to\infty}\int_{E}f_{k}=1$
\end_inset

，故
\end_layout

\begin_layout Itemize
\begin_inset Formula $\int_{E}\lim_{k\to\infty}f_{k}\neq\lim_{k\to\infty}\int_{E}f_{k}$
\end_inset

，即积分与极限不能交换顺序。
\end_layout

\end_deeper
