\begin_layout Section
复数级数
\end_layout

\begin_layout Subsection
收敛与发散
\end_layout

\begin_layout Definition
\begin_inset ERT
status open

\begin_layout Plain Layout

复数级数
\end_layout

\end_inset

给定复数序列 
\begin_inset Formula $\left\{ z_{\nu}\right\} _{\nu=1}^{\infty}$
\end_inset

，对这无穷项求和的表达式 
\begin_inset Formula $\sum_{\nu=1}^{\infty}z_{\nu}$
\end_inset

 被称为『复数级数 (series of complex numbers)』。
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Definition
\begin_inset ERT
status open

\begin_layout Plain Layout

部分和
\end_layout

\end_inset

给定复数序列 
\begin_inset Formula $\left\{ z_{\nu}\right\} _{\nu=1}^{\infty}$
\end_inset

，对其前 
\begin_inset Formula $n$
\end_inset

 项求和的表达式
\begin_inset Formula 
\[
S_{n}\coloneqq\sum_{\nu=1}^{n}z_{\nu}\equiv z_{1}+z_{2}+\cdots+z_{n}
\]

\end_inset

被称为复数级数 
\begin_inset Formula $\sum_{\nu=1}^{\infty}z_{\nu}$
\end_inset

 的『前 
\begin_inset Formula $n$
\end_inset

 项「部分和 (partial sum)」』，由全体部分和构成的复数序列 
\begin_inset Formula $\left\{ S_{n}\right\} _{n=1}^{\infty}$
\end_inset

 被称为原复数序列 
\begin_inset Formula $\left\{ z_{\nu}\right\} _{\nu=1}^{\infty}$
\end_inset

 的『部分和序列』。
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Definition
\begin_inset ERT
status open

\begin_layout Plain Layout

收敛、发散
\end_layout

\end_inset

若复数序列 
\begin_inset Formula $\left\{ z_{\nu}\right\} _{\nu=1}^{\infty}$
\end_inset

 的部分和序列 
\begin_inset Formula $\left\{ S_{n}\equiv\sum_{\nu=1}^{n}z_{\nu}\right\} _{n=1}^{\infty}$
\end_inset

 是收敛的复数序列，则称复数级数 
\begin_inset Formula $\sum_{\nu=1}^{\infty}z_{\nu}$
\end_inset

 是『收敛的级数 (convergent series)』，并称 
\begin_inset Formula $\lim_{n\to\infty}S_{n}$
\end_inset

 为序列 
\begin_inset Formula $\left\{ z_{\nu}\right\} _{\nu=1}^{\infty}$
\end_inset

 的的『级数和 (series sum)』，用 
\begin_inset Formula $\sum_{\nu=1}^{\infty}z_{\nu}=\lim_{n\to\infty}S_{n}\equiv\lim_{n\to\infty}\sum_{\nu=1}^{n}z_{\nu}$
\end_inset

 表示；反之，则称 
\begin_inset Formula $\sum_{\nu=1}^{\infty}z_{\nu}$
\end_inset

 为『发散的级数 (divergent series)』。
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Definition
\begin_inset ERT
status open

\begin_layout Plain Layout

绝对收敛
\end_layout

\end_inset

若实数级数 
\begin_inset Formula $\sum_{\nu=1}^{\infty}\vert z_{\nu}\vert$
\end_inset

 收敛，则称复数级数 
\begin_inset Formula $\sum_{\nu=1}^{\infty}z_{\nu}$
\end_inset

 为『绝对收敛的级数 (absolutely convergent series)』。
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Subsection
绝对收敛判别法
\end_layout

\begin_layout Theorem
\begin_inset ERT
status open

\begin_layout Plain Layout

[比较判别法]
\end_layout

\end_inset

若已知复数级数 
\begin_inset Formula $\sum_{\nu=1}^{\infty}w_{\nu}$
\end_inset

 收敛（不必绝对收敛），且存在充分大的 
\begin_inset Formula $n\in\mathbb{N}$
\end_inset

，使得 
\begin_inset Formula $\forall\nu\in\mathbb{N}\cap[n,\infty)$
\end_inset

 都有 
\begin_inset Formula $\vert z_{\nu}\vert<w_{\nu}$
\end_inset

，则复数级数 
\begin_inset Formula $\sum_{\nu=1}^{\infty}z_{\nu}$
\end_inset

 绝对收敛。
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Theorem
\begin_inset ERT
status open

\begin_layout Plain Layout

[比值判别法]
\end_layout

\end_inset

若 
\begin_inset Formula $\exists\rho\in(0,1)$
\end_inset

，且存在充分大的 
\begin_inset Formula $n\in\mathbb{N}$
\end_inset

，使得 
\begin_inset Formula $\forall\nu\in\mathbb{N}\cap[n,\infty)$
\end_inset

 都有 
\begin_inset Formula $\vert z_{\nu+1}/z_{\nu}\vert<\rho<1$
\end_inset

，则复数级数 
\begin_inset Formula $\sum_{\nu=1}^{\infty}z_{\nu}$
\end_inset

 绝对收敛。
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Theorem
\begin_inset ERT
status open

\begin_layout Plain Layout

[d'Alembert 判别法]
\end_layout

\end_inset

若 
\begin_inset Formula $\varlimsup_{\nu\to\infty}\vert z_{\nu+1}/z_{\nu}\vert\eqqcolon\rho\in(0,1)$
\end_inset

，则复数级数 
\begin_inset Formula $\sum_{\nu=1}^{\infty}z_{\nu}$
\end_inset

 绝对收敛。
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Theorem
\begin_inset ERT
status open

\begin_layout Plain Layout

[Cauchy 判别法]
\end_layout

\end_inset

若 
\begin_inset Formula $\varlimsup_{\nu\to\infty}\sqrt[\nu]{\vert z_{\nu}\vert}\eqqcolon\rho\in(0,1)$
\end_inset

，则复数级数 
\begin_inset Formula $\sum_{\nu=1}^{\infty}z_{\nu}$
\end_inset

 绝对收敛。
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Theorem
\begin_inset ERT
status open

\begin_layout Plain Layout

[Gauss 判别法]
\end_layout

\end_inset

若 
\begin_inset Formula $\exists h>1$
\end_inset

 且存在充分大的 
\begin_inset Formula $n\in\mathbb{N}$
\end_inset

，使得
\begin_inset Formula 
\[
\left\vert \frac{z_{\nu}}{z_{\nu+1}}\right\vert =1+\frac{h}{\nu}+\frac{B(\nu)}{\nu^{2}}\qquad\forall\nu\in\mathbb{N}\cap[n,\infty)
\]

\end_inset

其中 
\begin_inset Formula $B\colon\mathbb{N}\to\mathbb{R}$
\end_inset

 为有界函数，则复数级数 
\begin_inset Formula $\sum_{\nu=1}^{\infty}z_{\nu}$
\end_inset

 绝对收敛。
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

