\begin_layout Theorem
\begin_inset ERT
status open

\begin_layout Plain Layout

[Euler]
\end_layout

\end_inset


\begin_inset Formula 
\[
\exp(\sqrt{-1}z)=\cos(z)+\sqrt{-1}\sin(z),\quad\forall z\in\mathbb{C}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Proof
利用指数函数及三角函数的定义及 
\begin_inset Formula $\ii^{2}=-1$
\end_inset

 即得
\begin_inset Formula 
\[
\begin{aligned}\exp(\sqrt{-1}z) & =\sum_{n=0}^{\infty}\frac{(\sqrt{-1}z)^{n}}{n!}=\sum_{\nu=0}^{\infty}\frac{(\sqrt{-1}z)^{2\nu}}{(2\nu)!}+\sum_{\nu=0}^{\infty}\frac{(\sqrt{-1}z)^{2\nu+1}}{(2\nu+1)!}\\
 & =\underbrace{\sum_{\nu=0}^{\infty}(-1)^{\nu}\frac{z^{2\nu}}{(2\nu)!}}_{\cos(z)}+\sqrt{-1}\cdot\underbrace{\sum_{\nu=0}^{\infty}(-1)^{\nu}\frac{z^{2\nu+1}}{(2\nu+1)!}}_{\sin(z)}
\end{aligned}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Corollary
指数函数可以化为指数函数的和差：
\begin_inset Formula 
\[
\cos(z)=\frac{\exp(\ii z)+\exp(-\ii z)}{2},\quad\sin(z)=\frac{\exp(\ii z)-\exp(-\ii z)}{2\ii}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Standard
利用这些关系，可以化简一些求和、求积式。
\end_layout

\begin_layout Example
化简
\begin_inset Formula 
\[
C_{n}(z)\coloneqq\sum_{\nu=1}^{n}\cos(\nu z),\quad S_{n}(z)\coloneqq\sum_{\nu=1}^{n}\sin(\nu z)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Solution*
化为等比数列求和：
\begin_inset Formula 
\[
\begin{aligned}C_{n}(z)+\sqrt{-1}S_{n}(z) & =\sum_{\nu=1}^{n}\left[\cos(\nu z)+\sqrt{-1}\sin(\nu z)\right]=\sum_{\nu=1}^{n}\exp(\sqrt{-1}\nu z)\\
 & =\frac{\exp(\sqrt{-1}z)-\exp(\sqrt{-1}(n+1)z)}{1-\exp(\sqrt{-1}z)}=\cdots\times\frac{1-\exp(-\sqrt{-1}z)}{1-\exp(-\sqrt{-1}z)}\\
 & =\frac{\exp(\sqrt{-1}z)-1-\exp(\sqrt{-1}(n+1)z)+\exp(\sqrt{-1}nz)}{2-\exp(\sqrt{-1}z)-\exp(-\sqrt{-1}z)}
\end{aligned}
\]

\end_inset

分别（在形式上）取『实部』、『虚部』，再利用三角函数的倍角公式、和差化积公式即得
\begin_inset Formula 
\[
\begin{aligned}C_{n}(z) & =\frac{\cos(z)-1-\cos(nz+z)+\cos(nz)}{2-2\cos(z)}\\
 & =\frac{-2\sin(z/2)\sin(z/2)+2\sin(nz+z/2)\sin(z/2)}{4\sin^{2}(z/2)}=\frac{\sin(nz+z/2)-\sin(z/2)}{2\sin(z/2)}
\end{aligned}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\begin{aligned}S_{n}(z) & =\frac{\sin(z)-\sin(nz+z)+\sin(nz)}{2-2\cos(z)}\\
 & =\frac{+2\sin(z/2)\cos(z/2)-2\cos(nz+z/2)\sin(z/2)}{4\sin^{2}(z/2)}=\frac{\cos(z/2)-\cos(nz+z/2)}{2\sin(z/2)}
\end{aligned}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Example
求证
\begin_inset Formula 
\[
\prod_{\nu=1}^{n-1}\sin(\frac{\nu}{n}\mathrm{\pi})=\sin(\frac{1}{n}\mathrm{\pi})\sin(\frac{2}{n}\mathrm{\pi})\cdots\sin(\frac{n-1}{n}\mathrm{\pi})=\frac{n}{2^{n-1}},\quad\forall n\in\mathbb{N}\cap(1,\infty)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Proof
利用
\begin_inset Formula 
\[
\sin(\frac{\nu}{n}\mathrm{\pi})=\frac{\exp(\ii\frac{\nu}{n}\mathrm{\pi})-\exp(-\ii\frac{\nu}{n}\mathrm{\pi})}{2\ii}=\frac{\exp(-\ii\frac{\nu}{n}\mathrm{\pi})}{2\ii}\left[\exp(\ii\frac{2\nu}{n}\mathrm{\pi})-1\right]
\]

\end_inset

记 
\begin_inset Formula $w\coloneqq\exp(\ii\frac{2}{n}\mathrm{\pi})$
\end_inset

，则 
\begin_inset Formula $\left\{ w^{\nu}\right\} _{\nu=1}^{n}$
\end_inset

 是 
\begin_inset Formula $z^{n}=1$
\end_inset

 的 
\begin_inset Formula $n$
\end_inset

 个互异复数根。于是，所求乘积可以分解为两个乘积的乘积
\end_layout

\begin_layout Proof
\begin_inset Formula 
\[
\prod_{\nu=1}^{n-1}\sin(\frac{\nu}{n}\mathrm{\pi})=\left[\prod_{\nu=1}^{n-1}\frac{\exp(-\ii\frac{\nu}{n}\mathrm{\pi})}{2\ii}\right]\cdot\left[\prod_{\nu=1}^{n-1}\left(w^{\nu}-1\right)\right]
\]

\end_inset

第一个乘积可通过对指数上的等差数列求和获得
\begin_inset Formula 
\[
\prod_{\nu=1}^{n-1}\frac{\exp(-\ii\frac{\nu}{n}\mathrm{\pi})}{2\ii}=\frac{\exp(-\ii\frac{\mathrm{\pi}}{n}\sum_{\nu=1}^{n-1}\nu)}{(2\ii)^{n-1}}=\frac{\exp(-\ii\frac{n-1}{2}\mathrm{\pi})}{(2\ii)^{n-1}}=\frac{(-\ii)^{n-1}}{(2\ii)^{n-1}}=\frac{(-1)^{n-1}}{2^{n-1}}
\]

\end_inset

第二个乘积可以利用因式分解
\begin_inset Formula 
\[
z^{n}-1=\prod_{\nu=1}^{n}\left(z-w^{\nu}\right)=(z-1)\cdot(-1)^{n-1}\prod_{\nu=1}^{n-1}\left(w^{\nu}-z\right)
\]

\end_inset

及极限值
\begin_inset Formula 
\[
\lim_{z\to1}\frac{z^{n}-1}{z-1}=\left.\frac{nz^{n-1}}{1}\right|_{z=1}=n
\]

\end_inset

求得
\begin_inset Formula 
\[
\prod_{\nu=1}^{n-1}\left(w^{\nu}-1\right)=\frac{1}{(-1)^{n-1}}\lim_{z\to1}\frac{z^{n}-1}{z-1}=\frac{n}{(-1)^{n-1}}
\]

\end_inset


\end_layout

