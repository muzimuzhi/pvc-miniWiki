\end_layout

\begin_layout Example
\begin_inset Formula 
\[
\boxed{\phi(\vec{r})=k_{1}\iiint_{V(\vec{r}')}\frac{\rho(\vec{r}')}{\vert\vec{r}-\vec{r}'\vert}\qquad k_{1}=\frac{1}{4\mathrm{\pi}\varepsilon_{0}}}
