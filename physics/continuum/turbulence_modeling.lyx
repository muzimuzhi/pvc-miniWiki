\begin_inset Formula 
\[
G=\left(\frac{6}{\mathrm{\pi}\Delta^{2}}\right)^{3/2}\exp(\frac{-6\norm{\vec{r}-\vec{s}}^{2}}{\Delta^{2}}),
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Subsection
