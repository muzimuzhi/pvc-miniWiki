\[
\partial_{\tau}\ket{U}+\partial_{\nu}\ket{F_{\nu}}=\ket{0}\qquad\ket{U}\coloneqq\begin{bmatrix}\rho\\
\rho u_{\nu}\\
\rho u_{\sigma}\\
\rho u_{\pi}\\
\rho e_{0}
\end{bmatrix}\qquad\ket{F_{\nu}}\coloneqq\begin{bmatrix}\rho u_{\nu}\\
\rho u_{\nu}u_{\nu}+p\\
\rho u_{\sigma}u_{\nu}\\
\rho u_{\pi}u_{\nu}\\
\rho h_{0}u_{\nu}
\end{bmatrix}
\]

\end_inset

