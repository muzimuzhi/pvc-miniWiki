\begin_inset Formula 
\[
\rho_{\mathrm{A}}=\frac{u_{\mathrm{B}}-u_{\Gamma}}{u_{\mathrm{A}}-u_{\Gamma}}\rho_{\mathrm{B}}=\frac{p_{\mathrm{A}}-p_{\mathrm{B}}}{p_{\mathrm{A}}-p_{\mathrm{B}}-(u_{\mathrm{A}}-u_{\mathrm{B}})^{2}\rho_{\mathrm{B}}}\rho_{\mathrm{B}}
