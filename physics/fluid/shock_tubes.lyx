\begin_layout Subsubsection
Jacobian 矩阵
\end_layout

\begin_layout Standard
原始变量 
\begin_inset Formula $\rho,u,p$
\end_inset

 及通量 
\begin_inset Formula $\vert F\rangle$
\end_inset

 的分量可以表示为守恒变量 
\begin_inset Formula $\vert U\rangle$
\end_inset

 的函数：
\begin_inset Formula 
\[
\begin{gathered}\rho=U_{1}\qquad u=\frac{U_{2}}{U_{1}}\qquad\frac{\rho u^{2}}{2}=\frac{U_{2}U_{2}}{2U_{1}}\qquad p=\left(U_{3}-\frac{U_{2}U_{2}}{2U_{1}}\right)\gamma^{-}\\
F_{1}=U_{2}\qquad F_{2}=U_{3}\gamma^{-}+\frac{U_{2}U_{2}}{2U_{1}}(3-\gamma)\qquad F_{3}=\left(U_{3}\gamma-\frac{U_{2}U_{2}}{2U_{1}}\gamma^{-}\right)\frac{U_{2}}{U_{1}}
\end{gathered}
\]

\end_inset

于是，守恒型一维 Euler 方程的 Jacobian 矩阵为
\begin_inset Formula 
\[
\begin{aligned}\underline{A}(\underline{U}) & =\frac{\partial\vert F\rangle}{\partial\vert U\rangle}=\begin{bmatrix}\pdv*{F_{1}}{U_{1}} & \pdv*{F_{1}}{U_{2}} & \pdv*{F_{1}}{U_{3}}\\
\pdv*{F_{2}}{U_{1}} & \pdv*{F_{2}}{U_{2}} & \pdv*{F_{2}}{U_{3}}\\
\pdv*{F_{3}}{U_{1}} & \pdv*{F_{3}}{U_{2}} & \pdv*{F_{3}}{U_{3}}
\end{bmatrix}\\
 & =\begin{bmatrix}0 & 1 & 0\\
(\gamma-3)(U_{2}/U_{1})^{2}/2 & (3-\gamma)(U_{2}/U_{1}) & \gamma^{-}\\
\left((U_{2}/U_{1})^{2}\gamma^{-}-\gamma U_{3}/U_{1}\right)\mathclose{}(U_{2}/U_{1}) & \left(\gamma U_{3}/U_{1}-(3\gamma^{-}/2)(U_{2}/U_{1})^{2}\right) & \gamma U_{2}/U_{1}
\end{bmatrix}
\end{aligned}
\]

\end_inset

代入 
\begin_inset Formula $U_{2}/U_{1}=u$
\end_inset

 及 
\begin_inset Formula $U_{3}/U_{1}=e_{0}$
\end_inset

 可得
\begin_inset Formula 
\[
\underline{A}(u,e_{0})=\begin{bmatrix}0 & 1 & 0\\
(\gamma-3)u^{2}/2 & (3-\gamma)u & \gamma^{-}\\
\left(\gamma^{-}u^{2}-\gamma e_{0}\right)\mathclose{}u & \left(\gamma e_{0}-3\gamma^{-}u^{2}/2\right) & \gamma u
\end{bmatrix}
\]

\end_inset

再代入
\begin_inset Formula 
\[
\gamma e_{0}=a^{2}/\gamma^{-}+\gamma u^{2}/2\impliedby\begin{cases}
e_{0}-u^{2}/2=e=RT/\gamma^{-}\\
a=\gamma RT=\gamma\gamma^{-}e
\end{cases}
\]

\end_inset

可得
\begin_inset Formula 
\[
\underline{A}(u,a)=\begin{bmatrix}0 & 1 & 0\\
(\gamma-3)u^{2}/2 & (3-\gamma)u & \gamma^{-}\\
\left(\gamma^{-}u^{2}/2-a^{2}/\gamma^{-}\right)\mathclose{}u & \left((3-2\gamma)u^{2}/2-a^{2}/\gamma^{-}\right) & \gamma u
\end{bmatrix}
\]

\end_inset


\end_layout

\begin_layout Subsubsection
特征值 & 特征向量
\end_layout

\begin_layout Standard
特征值问题 
\begin_inset Formula $\underline{A}\,\vert R_{i}\rangle=\lambda_{i}\,\vert R_{i}\rangle$
\end_inset

 有三组解：
\begin_inset Formula 
\[
\begin{cases}
\lambda_{1}=u-a\\
\vert R_{1}\rangle=\begin{bmatrix}1\\
u-a\\
h_{0}-ua
\end{bmatrix}
\end{cases}\qquad\begin{cases}
\lambda_{2}=u\\
\vert R_{2}\rangle=\begin{bmatrix}1\\
u\\
u^{2}/2
\end{bmatrix}
\end{cases}\qquad\begin{cases}
\lambda_{3}=u+a\\
\vert R_{3}\rangle=\begin{bmatrix}1\\
u+a\\
h_{0}+ua
\end{bmatrix}
\end{cases}
\]

\end_inset


\end_layout

\begin_layout Lemma
一维 Euler 方程的第一、三特征场是真正非线性的
\begin_inset Index idx
status collapsed

\begin_layout Plain Layout
characteristic!~ field!genuinely nonlinear ~
\end_layout

\end_inset

，第二特征场是线性退化的
\begin_inset Index idx
status collapsed

\begin_layout Plain Layout
characteristic!~ field!linearly degenerate ~
\end_layout

\end_inset

。
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Proof
关键步骤是计算
\begin_inset Formula 
\[
\bra{\grad{\lambda_{i}}}\coloneqq\begin{bmatrix}\pdv*{\lambda_{i}}{U_{1}} & \pdv*{\lambda_{i}}{U_{2}} & \pdv*{\lambda_{i}}{U_{3}}\end{bmatrix}
\]

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
第二特征场的特征值为 
\begin_inset Formula $\lambda_{2}(U)=u=U_{2}/U_{1}$
\end_inset

，它的梯度为
\begin_inset Formula 
\[
\bra{\grad{\lambda_{2}}}=\bra{\grad{u}}=\frac{1}{U_{1}}\begin{bmatrix}-\dfrac{U_{2}}{U_{1}} & 1 & 0\end{bmatrix}=\frac{1}{\rho}\begin{bmatrix}-u & 1 & 0\end{bmatrix}
\]

\end_inset

相应的特征场是线性退化的：
\begin_inset Formula 
\[
\ip{\grad{\lambda_{2}}}{R_{2}}=\frac{1}{\rho}\begin{bmatrix}-u & 1 & 0\end{bmatrix}\begin{bmatrix}1\\
u\\
u^{2}/2
\end{bmatrix}=0
\]

\end_inset


\end_layout

\begin_layout Itemize
第一、三特征场的特征值含有音速 
\begin_inset Formula $a$
\end_inset

，因此需先计算 
\begin_inset Formula $\bra{\grad{a}}$
\end_inset

：
\begin_inset Formula 
\[
\begin{aligned}\bra{\grad{a}} & =\bra{\frac{\grad(a^{2})}{2a}}=\frac{\gamma\gamma^{-}}{2a}\bra{\grad(\frac{U_{3}}{U_{1}}-\frac{1}{2}\frac{U_{2}}{U_{1}}\frac{U_{2}}{U_{1}})}\\
 & =\frac{\gamma\gamma^{-}}{2a}\frac{1}{U_{1}}\begin{bmatrix}\left((U_{2}/U_{1})^{2}-U_{3}/U_{1}\right) & -U_{2}/U_{1} & 1\end{bmatrix}\\
 & =\frac{\gamma\gamma^{-}}{2a\rho}\begin{bmatrix}\left(u^{2}/2-a^{2}/(\gamma\gamma^{-})\right) & -u & 1\end{bmatrix}
\end{aligned}
\]

\end_inset

相应的特征场是真正非线性的：
\begin_inset Formula 
\[
\begin{aligned}\bra{\grad{\lambda_{1}}}=\bra{\grad{u}}-\bra{\grad{a}} & \implies\ip{\grad{\lambda_{1}}}{R_{1}}=-\frac{\gamma^{+}a}{2\rho}\ne0\\
\bra{\grad{\lambda_{3}}}=\bra{\grad{u}}+\bra{\grad{a}} & \implies\ip{\grad{\lambda_{3}}}{R_{3}}=+\frac{\gamma^{+}a}{2\rho}\ne0
\end{aligned}
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

