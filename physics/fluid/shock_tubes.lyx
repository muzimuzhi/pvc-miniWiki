\begin_inset Formula 
\[
\underline{J}_{\underline{U}\to\underline{U'}}=\frac{\partial(U_{1},U_{2},U_{3},U_{4})}{\partial(U'_{1},U'_{2},U'_{3},U'_{4})}=\begin{bmatrix}1 & 0 & 0 & 0\\
U'_{2} & U'_{1} & 0 & 0\\
U'_{3} & 0 & U'_{3} & 0\\
\frac{(U'_{2})^{2}+(U'_{3})^{2}}{2} & U'_{1}U'_{2} & U'_{1}U'_{3} & \frac{1}{\gamma^{-}}
\end{bmatrix}=\begin{bmatrix}1 & 0 & 0 & 0\\
u & \rho & 0 & 0\\
v & 0 & \rho & 0\\
\frac{u^{2}+v^{2}}{2} & \rho u & \rho v & \frac{1}{\gamma^{-}}
\end{bmatrix}
\]

\end_inset


\begin_inset Formula 
\[
\underline{R}=\underline{J}_{\underline{U}\to\underline{U'}}\underline{R'}=\begin{bmatrix}1 & 0 & 0 & 0\\
u & \rho & 0 & 0\\
v & 0 & \rho & 0\\
\frac{u^{2}+v^{2}}{2} & \rho u & \rho v & \frac{1}{\gamma^{-}}
\end{bmatrix}\begin{bmatrix}\rho & 1 & 0 & \rho\\
-a & 0 & 0 & +a\\
0 & 0 & 1 & 0\\
