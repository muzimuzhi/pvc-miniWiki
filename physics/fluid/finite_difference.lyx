\begin_inset Formula 
\begin{equation}
w\coloneqq\exp(\ii\frac{2\mathrm{\pi}}{n}),\quad\left\{ \hat{u}_{k}(t)\coloneqq\sum_{r=0}^{n-1}u_{r}(t)\,w^{-rk}\right\} _{k=0}^{n-1}\implies\left\{ u_{r}(t)=\frac{1}{n}\sum_{k=0}^{n-1}\hat{u}_{k}(t)\,w^{rk}\right\} _{i=0}^{n-1}.\label{eq:有限差分·DFT}
\end{equation}

\end_inset

